@model crm_mvc.Models.LoginUsuario

@{
    ViewData["Title"] = "LoginUsername";
}

<h1>Login de usuarios</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="LoginUsername">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ID" value="1" />
            <div class="form-group row">
                <div class="col-2">
                    <label asp-for="USUARIO" class="control-label"></label>
                </div>
                <div class="col-5">
                    <input asp-for="USUARIO" class="form-control" />
                    <span asp-validation-for="USUARIO" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-2">
                    <label asp-for="PASSWORD" class="control-label"></label>
                </div>
                <div class="col-5">
                    <input asp-for="PASSWORD" class="form-control" />
                    <span asp-validation-for="PASSWORD" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-2">
                    <input type="submit" value="Login" class="btn btn-primary" />
                </div>
                
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
